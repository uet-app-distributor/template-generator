---
apiVersion: v1
kind: Namespace
metadata:
  name: {{ app_name }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    customer_app: {{ app_name }}
    app_type: frontend
  name: fe-{{ app_name }}
  namespace: {{ app_name }}
spec:
  replicas: 1
  selector:
    matchLabels:
      customer_app: fe-{{ app_name }}
      app_type: frontend
  template:
    metadata:
      labels:
        customer_app: fe-{{ app_name }}
        app_type: frontend
    spec:
      containers:
      - name: fe-{{ app_name }}
        image: {{ registry_user }}/fe-{{ app_name }}:latest
        env:
        {%- for key, value in frontend_env_vars.items() %}
          - name: {{ key }}
            value: {{ value }}
        {%- endfor %}
---
apiVersion: v1
kind: Service
metadata:
  labels:
    customer_app: {{ app_name }}
  name: fe-{{ app_name }}-svc
  namespace: {{ app_name }}
spec:
  ports:
    - name: fe-{{ app_name }}
      port: 8080
      protocol: TCP
      targetPort: 80
  selector:
    customer_app: {{ app_name }}
    app_type: frontend
  type: ClusterIP
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: fe-{{ app_name }}-ingress
  namespace: {{ app_name }}
spec:
  rules:
    - host: {{ app_name }}.{{ uad_domain }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: fe-{{ app_name }}-svc
                port:
                  number: 8080
